@inherits LayoutComponentBase

<MudThemeProvider IsDarkMode="_darkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar>
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@(e => DrawerToggle())"/>
        <MudSpacer/>
        <MudToggleIconButton Icon="@Icons.Material.Outlined.DarkMode" ToggledIcon="@Icons.Material.Outlined.LightMode"
                             Color="Color.Inherit" @bind-Toggled="_darkMode"/>
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">Inven</MudText>
        </MudDrawerHeader>
        <NavMenu/>
    </MudDrawer>
    <MudMainContent Class="mt-5">
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    bool _darkMode = true;
    bool _drawerOpen = true;

    void DrawerToggle() {
        _drawerOpen = !_drawerOpen;
    }

    protected override async Task OnInitializedAsync() {
        await InvokeAsync(StateHasChanged);
    }

}